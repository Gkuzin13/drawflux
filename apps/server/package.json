{
  "name": "sketch-app-server",
  "version": "0.1.0",
  "type": "module",
  "sideEffects": false,
  "scripts": {
    "dev": "nodemon --watch './**' --ext 'ts,json,sql' --exec 'ts-node server.ts'",
    "test:watch": "vitest",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "fix-all-files": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@shared": "workspace:shared@1.0.1",
    "body-parser": "1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^2.3.0",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "pg": "^8.10.0"
  },
  "devDependencies": {
    "@eslint-config-bases": "workspace:eslint-config-bases@latest",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.6.6",
    "nodemon": "^2.0.22",
    "ts-node": "^10.9.1",
    "typescript": "*"
  }
}

{
  "name": "drawflux-server",
  "version": "0.1.0",
  "type": "commonjs",
  "sideEffects": false,
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "start": "node --experimental-specifier-resolution=node dist/server.js",
    "dev": "nodemon --watch './**' --ext 'ts,json' --exec 'tsx src/server.ts'",
    "build": "tsc --project tsconfig.build.json",
    "test:watch": "vitest",
    "test": "vitest run",
    "lint": "eslint . --ext .ts",
    "fix-all-files": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "body-parser": "^1.20.2",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^2.3.0",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "pg": "^8.10.0",
    "qrcode": "^1.5.3",
    "shared": "workspace:^"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.6.6",
    "@types/qrcode": "^1.5.0",
    "@types/supertest": "^2.0.12",
    "dotenv": "^16.0.3",
    "eslint-config-bases": "workspace:eslint-config-bases@latest",
    "helmet": "^6.1.5",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3",
    "tsx": "^3.12.6",
    "typescript": "*",
    "vitest": "*"
  }
}

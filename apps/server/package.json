{
  "name": "drawflux-server",
  "version": "0.1.0",
  "sideEffects": false,
  "engines": {
    "node": ">=18.0.0 <19"
  },
  "scripts": {
    "start": "node dist/server.js",
    "dev": "nodemon --signal SIGINT --exec 'tsx -r dotenv/config src/server.ts'",
    "build": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
    "test:watch": "vitest",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint . --ext .ts",
    "fix-all-files": "eslint . --ext .ts --fix",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "cron": "^2.3.0",
    "helmet": "^6.1.5",
    "express": "^4.18.2",
    "express-promise-router": "^4.1.1",
    "pg": "^8.10.0",
    "qrcode": "^1.5.3",
    "shared": "workspace:^",
    "tsc-alias": "^1.8.6",
    "ws": "^8.13.0",
    "zod": "*"
  },
  "devDependencies": {
    "@types/body-parser": "^1.19.2",
    "@types/compression": "^1.7.2",
    "@types/cors": "^2.8.13",
    "@types/cron": "^2.0.1",
    "@types/express": "^4.17.17",
    "@types/node": "^18.15.11",
    "@types/pg": "^8.6.6",
    "@types/qrcode": "^1.5.0",
    "@types/supertest": "^2.0.12",
    "@types/ws": "^8.5.5",
    "dotenv": "^16.0.3",
    "eslint-config-bases": "workspace:eslint-config-bases@latest",
    "tsx": "^3.12.6",
    "nodemon": "^2.0.22",
    "supertest": "^6.3.3"
  },
  "nodemonConfig": {
    "ignore": [
      "dist/**",
      "coverage/**",
      "tsconfig.tsbuildinfo"
    ],
    "watch": [
      "./**"
    ],
    "ext": "ts,json,.env"
  }
}
